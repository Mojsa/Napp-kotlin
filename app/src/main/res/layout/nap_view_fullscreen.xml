<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_margin="10dp"
    android:elevation="5dp"
    android:gravity="center_vertical"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_menu_manage" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/napTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NAP TYPE"
                    android:textColor="@color/darker_gray_color"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/napDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@color/darker_gray_color"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>


        <com.iigo.library.ClockView
            android:id="@+id/clockView"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            app:center_point_color="@color/darker_gray_color"
            app:ear_color="@color/teal_color"
            app:edge_color="@color/teal_color"
            app:foot_color="@color/darker_gray_color"
            app:head_color="@color/teal_color"
            app:hour_hand_color="@color/darker_gray_color"
            app:minute_hand_color="@color/dark_gray_color"
            app:scale_color="@color/light_gray_color"
            app:second_hand_color="@color/light_gray_color" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:background="@color/teal_color"
            android:text="START"
            android:textColor="@android:color/white" />

    </LinearLayout>


</android.support.v7.widget.CardView>